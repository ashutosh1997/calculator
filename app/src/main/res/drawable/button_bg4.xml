<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ee3000" />
            <stroke
                android:width="2dp"
                android:color="#ffffff" />
            <corners
                android:radius="15dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#b82500" />
            <stroke
                android:width="2dp"
                android:color="#ffffff" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>